<?xml version="1.0"?>

<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <container name="root">
        <block class="NDP\Question\Block\Product\View\ListView" name="product.info.product_additional_data" as="product_additional_data" template="product/view/list.phtml" />
        <block class="Magento\Theme\Block\Html\Pager" name="product_question_list.toolbar">
            <arguments>
                <argument name="ajax_infinite" xsi:type="boolean">true</argument>
                <argument name="show_per_page" xsi:type="boolean">true</argument>
                <argument name="show_amounts" xsi:type="boolean">false</argument>
            </arguments>
        </block>
    </container>
</layout>
